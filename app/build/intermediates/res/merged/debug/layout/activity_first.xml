<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="FirstActivity"
    android:id="@+id/layoutmain"
    android:orientation="vertical"
    android:background="@drawable/texturerepeat">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonService"
            android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/buttonService"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="onClickServiceButton"
            android:layout_gravity="fill_horizontal"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/buttonPassenger"
            android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/buttonPassenger"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="onClickPassengerButton"
            android:layout_gravity="fill_horizontal"
            android:textColor="@color/white"/>

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/imagepickthebus" />
    </FrameLayout>
</RelativeLayout>
